<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_tv_jin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/normal_white_pressed_gray"
                android:gravity="center"
                android:text="今日统计"
                android:textColor="#282828"
                android:textSize="28px" />

            <View
                android:layout_width="1px"
                android:layout_height="25px"
                android:background="#ebebeb" />

            <TextView
                android:id="@+id/total_tv_ming"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/normal_white_pressed_gray"
                android:gravity="center"
                android:text="月统计"
                android:textColor="#282828"
                android:textSize="28px" />

            <View
                android:layout_width="1px"
                android:layout_height="25px"
                android:background="#ebebeb" />

            <TextView
                android:id="@+id/total_tv_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/normal_white_pressed_gray"
                android:gravity="center"
                android:text="总统计"
                android:textColor="#282828"
                android:textSize="28px" />

        </LinearLayout>

        <View
            android:id="@+id/total_v_line"
            android:layout_width="100px"
            android:layout_height="2px"
            android:background="#2c82df" />
    </FrameLayout>

    <cn.zero.android.common.view.swipetoloadlayout.view.SwipeToLoadRecyclerView
        android:id="@+id/totla_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:swipe_mode="both"></cn.zero.android.common.view.swipetoloadlayout.view.SwipeToLoadRecyclerView>

</LinearLayout>
