<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140px"
    android:background="#fff"
    android:descendantFocusability="blocksDescendants">

    <cn.zero.android.common.view.shapeimageview.CircularImageView
        android:id="@+id/item_accountlv_imgv_head"
        android:layout_width="88px"
        android:layout_height="88px"
        android:layout_centerVertical="true"
        android:layout_marginRight="20px"
        android:layout_toLeftOf="@+id/bset_imgv_01"
        android:scaleType="fitXY"
        android:src="@drawable/ic_mine_head"
        app:siBorderColor="#fff"
        app:siBorderWidth="1px" />


    <TextView
        android:id="@+id/item_accountlv_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_accountlv_imgv_head"
        android:text="家家利水站"
        android:textColor="#292929"
        android:textSize="28px" />

    <CheckBox
        android:id="@+id/item_accountlv_cbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:button="@drawable/selector_pay2_cbox"
        android:clickable="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#ebebeb" />

</RelativeLayout>
