<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <ImageView
                android:id="@+id/sta_imgv_head"
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_marginRight="20px"
                android:layout_marginTop="20px"
                android:scaleType="fitXY"
                android:src="@drawable/ic_client_test" />

            <TextView
                android:id="@+id/sta_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:layout_toRightOf="@id/sta_imgv_head"
                android:text="博爱道水站"
                android:textColor="#282828"
                android:textSize="28px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"
                android:layout_toRightOf="@+id/sta_tv_name"
                android:src="@drawable/ic_bao" />

            <TextView
                android:id="@+id/sta_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sta_tv_name"
                android:layout_marginTop="10px"
                android:layout_toRightOf="@+id/sta_imgv_head"
                android:drawableLeft="@drawable/ic_01"
                android:drawablePadding="10px"
                android:padding="2px"
                android:text="8:00—12:00"
                android:textColor="#999999"
                android:textSize="22px" />

            <TextView
                android:id="@+id/sta_tv_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sta_tv_time"
                android:layout_marginTop="10px"
                android:layout_toRightOf="@+id/sta_imgv_head"
                android:maxEms="15"
                android:singleLine="true"
                android:text="买50桶水送饮水机"
                android:textColor="#fb4747"
                android:textSize="22px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/sta_tv_03"
                android:layout_marginTop="10px"
                android:background="#ebebeb" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:background="#fff"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <TextView
                android:id="@+id/sta_tv_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/ic_new_shui"
                android:drawablePadding="30px"
                android:gravity="center_vertical"
                android:maxEms="15"
                android:singleLine="true"
                android:text="河北区博爱道河北区博爱道河北区博爱道河北区博爱道河北区博爱道河北区博爱道"
                android:textColor="#292929"
                android:textSize="24px" />


            <View
                android:id="@+id/item_stalv_v_phone"
                android:layout_width="1px"
                android:layout_height="25px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:background="#ebebeb" />

            <TextView
                android:id="@+id/sta_tv_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/item_stalv_v_phone"
                android:text="1km"
                android:textColor="#2c82df"
                android:textSize="24px"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="20px"
            android:background="#fff"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/ic_02"
                android:drawablePadding="20px"
                android:text="水站详情"
                android:textColor="#292929"
                android:textSize="28px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#ebebeb" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:background="#fff"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <TextView
                android:id="@+id/sta_tv_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="售卖品牌: "
                android:textColor="#999999"
                android:textSize="24px" />

            <TextView
                android:id="@+id/sta_tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@id/sta_tv_01"
                android:text="娃哈哈  乐百氏 农夫山泉"
                android:textColor="#292929"
                android:textSize="24px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#ebebeb" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:background="#fff"
            android:paddingBottom="10px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="10px">

            <TextView
                android:id="@+id/sta_tv_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="简       介: "
                android:textColor="#999999"
                android:textSize="24px" />

            <TextView
                android:id="@+id/sta_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@id/sta_tv_02"
                android:maxLength="55"
                android:text="娃哈哈  乐百氏 农夫山泉娃哈哈  乐百氏 农夫山泉娃哈哈  乐百氏 农夫山泉娃哈哈  乐百氏 农夫山泉娃哈哈  乐百氏 农夫山泉"
                android:textColor="#292929"
                android:textSize="24px" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sta_tv_jin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/normal_white_pressed_gray"
                    android:gravity="center"
                    android:text="商品"
                    android:textColor="#282828"
                    android:textSize="28px" />

                <View
                    android:layout_width="1px"
                    android:layout_height="25px"
                    android:background="#ebebeb" />

                <TextView
                    android:id="@+id/sta_tv_ming"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/normal_white_pressed_gray"
                    android:gravity="center"
                    android:text="送水工"
                    android:textColor="#282828"
                    android:textSize="28px" />

                <View
                    android:layout_width="1px"
                    android:layout_height="25px"
                    android:background="#ebebeb" />

                <TextView
                    android:id="@+id/sta_tv_all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/normal_white_pressed_gray"
                    android:gravity="center"
                    android:text="证件"
                    android:textColor="#282828"
                    android:textSize="28px" />

            </LinearLayout>

            <View
                android:id="@+id/sta_v_line"
                android:layout_width="100px"
                android:layout_height="2px"
                android:background="#2c82df" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ebebeb" />

        <cn.zero.android.common.view.swipetoloadlayout.view.SwipeToLoadRecyclerView
            android:id="@+id/sta_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:swipe_mode="both"></cn.zero.android.common.view.swipetoloadlayout.view.SwipeToLoadRecyclerView>

    </LinearLayout>

</LinearLayout>
