<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:paddingLeft="30px"
    android:paddingRight="30px">

    <ImageView
        android:id="@+id/item_mystulv_item_imgv"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_centerVertical="true"
        android:layout_marginRight="20px"
        android:scaleType="fitXY"
        android:src="@drawable/ic_client_test" />

    <TextView
        android:id="@+id/item_mystulv_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20px"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@id/item_mystulv_item_imgv"
        android:text="李霞姐"
        android:textColor="#292929"
        android:textSize="24px" />

    <TextView
        android:id="@+id/item_mystulv_item_tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@id/item_mystulv_item_tv_name"
        android:drawableLeft="@drawable/ic_page_lv_phone"
        android:drawablePadding="10px"
        android:text="1800000000"
        android:textColor="#fdca4f"
        android:textSize="24px" />

    <TextView
        android:id="@+id/item_mystulv_item_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_mystulv_item_imgv"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@id/item_mystulv_item_imgv"
        android:maxEms="15"
        android:singleLine="true"
        android:text="天津市河北区天津市河北区天津市河北区天津市河北区"
        android:textColor="#999999"
        android:textSize="24px" />

    <TextView
        android:id="@+id/mystu_jiubang"
        android:layout_width="130px"
        android:layout_height="45px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_cancelred"
        android:gravity="center"
        android:text="解除绑定"
        android:textColor="#fd4747"
        android:textSize="24px" />

</RelativeLayout>
