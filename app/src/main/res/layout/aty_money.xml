<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">


    <com.toocms.drink5.boss.ui.view.AutoCardView
        android:id="@+id/money_cardview_01"
        android:layout_width="match_parent"
        android:layout_height="142px"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="20px"
        android:background="#fff"
        app:cardCornerRadius="15px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/money_imgv_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_marginRight="30px"
                android:src="@drawable/ic_money_lo01" />

            <TextView
                android:id="@+id/money_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/money_imgv_01"
                android:layout_toRightOf="@id/money_imgv_01"
                android:text="线上支付可提金额"
                android:textColor="#282828"
                android:textSize="26px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/money_tv_name"
                android:layout_toRightOf="@id/money_tv_name"
                android:text="(元)"
                android:textColor="#999999"
                android:textSize="20px" />

            <TextView
                android:id="@+id/money_tv_ti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/money_tv_name"
                android:layout_marginTop="15px"
                android:layout_toRightOf="@id/money_imgv_01"
                android:text="1500"
                android:textColor="#ff6600"
                android:textSize="34px" />

            <cn.zero.android.common.view.FButton
                android:id="@+id/money_fb_to"
                android:layout_width="120px"
                android:layout_height="56px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:text="提取"
                android:textColor="@color/white"
                android:textSize="28px"
                app:buttonColor="#fb4747"
                app:cornerRadius="8px"
                app:shadowEnabled="false" />
        </RelativeLayout>

    </com.toocms.drink5.boss.ui.view.AutoCardView>

    <com.toocms.drink5.boss.ui.view.AutoCardView

        android:layout_width="match_parent"
        android:layout_height="142px"
        android:layout_below="@id/money_cardview_01"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="20px"
        android:background="#fff"
        app:cardCornerRadius="15px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/money_imgv2_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_marginRight="30px"
                android:src="@drawable/ic_money_lo2" />

            <TextView
                android:id="@+id/money_tv2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/money_imgv2_01"
                android:layout_toRightOf="@id/money_imgv2_01"
                android:text="京币抵扣结算差额"
                android:textColor="#282828"
                android:textSize="26px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/money_tv2_name"
                android:layout_toRightOf="@id/money_tv2_name"
                android:text="(元)"
                android:textColor="#999999"
                android:textSize="20px" />

            <TextView
                android:id="@+id/money_tv_di"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/money_tv2_name"
                android:layout_marginTop="15px"
                android:layout_toRightOf="@id/money_imgv2_01"
                android:text="1500"
                android:textColor="#ff6600"
                android:textSize="34px" />

            <cn.zero.android.common.view.FButton
                android:id="@+id/money_fb_qin"
                android:layout_width="120px"
                android:layout_height="56px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:text="结算"
                android:textColor="@color/white"
                android:textSize="28px"
                app:buttonColor="#fb4747"
                app:cornerRadius="8px"
                app:shadowEnabled="false" />
        </RelativeLayout>

    </com.toocms.drink5.boss.ui.view.AutoCardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_alignParentBottom="true"
        android:background="#fff">

        <TextView
            android:id="@+id/money_tv_ok"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#ffc000"
            android:gravity="center"
            android:text="结算"
            android:textColor="#fff"
            android:textSize="28px" />

        <TextView
            android:id="@+id/money_tv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:text="合并结算："
            android:textColor="#282828"
            android:textSize="22px" />

        <TextView
            android:id="@+id/money_tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/money_tv_01"
            android:text="￥900.00"
            android:textColor="#fe4c52"
            android:textSize="28px" />

    </RelativeLayout>
</RelativeLayout>
