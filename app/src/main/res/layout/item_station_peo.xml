<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="197px"
        android:background="#fff"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <FrameLayout
            android:id="@+id/item_sta_peo_fralay"
            android:layout_width="148px"
            android:layout_height="148px"
            android:layout_marginBottom="24px"
            android:layout_marginRight="20px"
            android:layout_marginTop="25px">

            <ImageView
                android:id="@+id/item_sta_peo_imgv_head"
                android:layout_width="148px"
                android:layout_height="148px"
                android:background="#cccccc"
                android:padding="1px"
                android:scaleType="fitXY"
                android:src="@drawable/ic_client_test" />

        </FrameLayout>

        <TextView
            android:id="@+id/item_sta_peo_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36px"
            android:layout_toRightOf="@+id/item_sta_peo_fralay"
            android:text="李师傅"
            android:textColor="#282828"
            android:textSize="28px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_sta_peo_tv_name"
            android:layout_marginTop="20px"
            android:layout_toRightOf="@+id/item_sta_peo_fralay"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_sta_peo_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_news_xin" />

            <ImageView
                android:id="@+id/item_sta_peo_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:src="@drawable/ic_news_xin" />

            <ImageView
                android:id="@+id/item_sta_peo_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:src="@drawable/ic_news_xin" />

            <ImageView
                android:id="@+id/item_sta_peo_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:src="@drawable/ic_news_xin" />

            <ImageView
                android:id="@+id/item_sta_peo_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:src="@drawable/ic_news_xin" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_sta_peo_fralay"
            android:layout_marginTop="20px"
            android:layout_toRightOf="@+id/item_sta_peo_fralay"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平均时长:"
                android:textColor="#999999"
                android:textSize="24px" />

            <TextView
                android:id="@+id/item_sta_peo_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="24分钟"
                android:textColor="#fe4c52"
                android:textSize="24px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="配送总单:"
                android:textColor="#999999"
                android:textSize="24px" />

            <TextView
                android:id="@+id/item_sta_peo_tv_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="34单"
                android:textColor="#fe4c52"
                android:textSize="24px" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#ebebeb" />
    </RelativeLayout>

</LinearLayout>
