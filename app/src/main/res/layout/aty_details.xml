<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/details_relay"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="#2c82df">

        <ImageView
            android:id="@+id/details_imgv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@drawable/ic_menu_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情"
            android:textColor="#fff"
            android:textSize="30px" />

        <TextView
            android:id="@+id/details_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:text="拒绝订单"
            android:textColor="#fff"
            android:textSize="30px" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/details_relay_botoom"
        android:layout_below="@id/details_relay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="#f5f5f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单编号："
                    android:textColor="#999999"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/details_tv_bianhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:text="1200000000"
                    android:textColor="#4d4d4d"
                    android:textSize="28px" />
            </LinearLayout>


            <View
                android:id="@+id/details_v_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="#ebebeb" />

            <LinearLayout
                android:id="@+id/details_linlay_t"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单状态："
                    android:textColor="#999999"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/details_tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:text="配送中"
                    android:textColor="#2c82df"
                    android:textSize="28px" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/details_tv_wwwww"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:paddingLeft="30px"
                android:visibility="gone"
                android:paddingRight="30px">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#ebebeb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#fff"
                    android:drawableLeft="@drawable/ic_wwwww"
                    android:drawablePadding="30px"
                    android:gravity="center_vertical"
                    android:text="物流信息"
                    android:textColor="#999999"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_mine_back" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="64px"
                android:background="#f5f5f5"
                android:gravity="center_vertical"
                android:paddingLeft="30px"
                android:text="收货人信息"
                android:textColor="#999999"
                android:textSize="28px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货人："
                    android:textColor="#4d4d4d"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/details_tv_peo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:text="千群"
                    android:textColor="#999999"
                    android:textSize="28px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="#ebebeb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话："
                    android:textColor="#4d4d4d"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/details_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:drawableLeft="@drawable/ic_page_lv_phone"
                    android:drawablePadding="15px"
                    android:text="180000000"
                    android:textColor="#ffc000"
                    android:textSize="28px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="#ebebeb" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px">

                <TextView
                    android:id="@+id/details_tv_address2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="收货地址："
                    android:textColor="#4d4d4d"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/details_tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@id/details_tv_address2"
                    android:text="千群"
                    android:textColor="#999999"
                    android:textSize="28px" />

                <ImageView
                    android:id="@+id/details_imgv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:src="@drawable/ic_detail_address" />

                <View
                    android:layout_width="1px"
                    android:layout_height="26px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="33px"
                    android:layout_toLeftOf="@id/details_imgv_address"
                    android:background="#999999" />
            </RelativeLayout>

            <LinearLayout

                android:id="@+id/details_linlay_g"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="64px"
                    android:background="#f5f5f5"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px"
                    android:text="商品信息"
                    android:textColor="#999999"
                    android:textSize="28px" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:paddingBottom="25px"
                    android:paddingTop="25px">

                    <ImageView
                        android:id="@+id/details_imgv_pro"
                        android:layout_width="148px"
                        android:layout_height="148px"
                        android:layout_marginRight="20px"
                        android:background="#dbdbdb"
                        android:padding="1px"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_page_lv_pro" />

                    <TextView
                        android:id="@+id/details_tv_proname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11px"
                        android:layout_toRightOf="@id/details_imgv_pro"
                        android:text="月眼山泉"
                        android:textColor="#282828"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/details_pagelv_tv_attr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/details_tv_proname"
                        android:layout_marginTop="20px"
                        android:layout_toRightOf="@id/details_imgv_pro"
                        android:text="规格：19L"
                        android:textColor="#999999"
                        android:textSize="26px" />

                    <TextView
                        android:id="@+id/details_pagelv_tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/details_pagelv_tv_attr"
                        android:layout_marginTop="20px"
                        android:layout_toRightOf="@id/details_imgv_pro"
                        android:text="x2"
                        android:textColor="#999999"
                        android:textSize="26px" />

                    <TextView
                        android:id="@+id/details_pagelv_tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20px"
                        android:text="￥2.00"
                        android:textColor="#292929"
                        android:textSize="28px" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="64px"
                    android:background="#f5f5f5"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px"
                    android:text="配送信息"
                    android:textColor="#999999"
                    android:textSize="28px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="配送时间："
                        android:textColor="#999999"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/details_pagelv_tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:text="尽快送达"
                        android:textColor="#4d4d4d"
                        android:textSize="28px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="#ebebeb" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发票抬头："
                        android:textColor="#999999"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/details_pagelv_tv_piao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:text="个人"
                        android:textColor="#4d4d4d"
                        android:textSize="28px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="#ebebeb" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注："
                        android:textColor="#999999"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/details_pagelv_tv_beizhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:text="顺带一袋洗衣液"
                        android:textColor="#4d4d4d"
                        android:textSize="28px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="#ebebeb" />

                <include layout="@layout/aty_details2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/details_linlay_ba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="64px"
                    android:background="#f5f5f5"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px"
                    android:text="本次还桶"
                    android:textColor="#999999"
                    android:textSize="28px" />

                <cn.zero.android.common.view.linearlistview.LinearListView
                    android:id="@+id/details_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:showDividers="middle|beginning|end|none"></cn.zero.android.common.view.linearlistview.LinearListView>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/details_relay_botoom"
        android:layout_width="match_parent"
        android:layout_height="97px"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f5f5f5" />

        <cn.zero.android.common.view.FButton
            android:id="@+id/details_fb_ok"
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:text="填写物流"
            android:textColor="@color/white"
            android:textSize="28px"
            android:visibility="visible"
            app:buttonColor="#ffc000"
            app:cornerRadius="5px"
            app:shadowEnabled="false" />
    </RelativeLayout>

</RelativeLayout>
