<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingLeft="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:text="业务类型"
            android:textColor="#292929"
            android:textSize="28px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:orientation="horizontal"
            android:paddingRight="3px">

            <CheckBox
                android:id="@+id/filter_cbox_01"
                android:layout_width="210px"
                android:layout_height="60px"
                android:background="@drawable/selector_filter_cbox"
                android:button="@null"
                android:gravity="center"
                android:text="全部"
                android:textColor="@color/selector_filter_cox"
                android:textSize="28px" />

            <CheckBox
                android:id="@+id/filter_cbox_02"
                android:layout_width="210px"
                android:layout_height="60px"
                android:layout_marginLeft="30px"
                android:background="@drawable/selector_filter_cbox"
                android:button="@null"
                android:gravity="center"
                android:text="欠桶"
                android:textColor="@color/selector_filter_cox"
                android:textSize="28px" />

            <CheckBox
                android:id="@+id/filter_cbox_03"
                android:layout_width="210px"
                android:layout_height="60px"
                android:layout_marginLeft="30px"
                android:background="@drawable/selector_filter_cbox"
                android:button="@null"
                android:gravity="center"
                android:text="还桶"
                android:textColor="@color/selector_filter_cox"
                android:textSize="28px" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/filter_cbox_04"
                android:layout_width="210px"
                android:layout_height="60px"
                android:background="@drawable/selector_filter_cbox"
                android:button="@null"
                android:gravity="center"
                android:text="线上交易"
                android:textColor="@color/selector_filter_cox"
                android:textSize="28px" />

            <CheckBox
                android:id="@+id/filter_cbox_05"
                android:layout_width="210px"
                android:layout_height="60px"
                android:layout_marginLeft="30px"
                android:background="@drawable/selector_filter_cbox"
                android:button="@null"
                android:gravity="center"
                android:text="线下交易"
                android:textColor="@color/selector_filter_cox"
                android:textSize="28px" />

            <CheckBox
                android:id="@+id/filter_cbox_06"
                android:layout_width="210px"
                android:layout_height="60px"
                android:layout_marginLeft="30px"
                android:background="@drawable/selector_filter_cbox"
                android:button="@null"
                android:gravity="center"
                android:text="拒绝的订单"
                android:textColor="@color/selector_filter_cox"
                android:textSize="28px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginTop="50px"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/filter_cbox_07"
                android:layout_width="210px"
                android:layout_height="60px"
                android:background="@drawable/selector_filter_cbox"
                android:button="@null"
                android:gravity="center"
                android:text="取消的订单"
                android:textColor="@color/selector_filter_cox"
                android:textSize="28px"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/filter_relay_start"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginTop="20px"
        android:background="#fff"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="开始时间"
            android:textColor="#292929"
            android:textSize="28px" />

        <TextView
            android:id="@+id/filter_tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="20px"
            android:drawableRight="@drawable/ic_mine_back"
            android:textColor="#999999"
            android:textSize="28px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#ebebeb" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/filter_relay_end"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="#fff"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="结束时间"
            android:textColor="#292929"
            android:textSize="28px" />

        <TextView
            android:id="@+id/filter_tv_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="20px"
            android:drawableRight="@drawable/ic_mine_back"
            android:textColor="#999999"
            android:textSize="28px" />

    </RelativeLayout>

    <cn.zero.android.common.view.FButton
        android:id="@+id/fb_filter_ok"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="44px"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="32px"
        app:buttonColor="#ffc000"
        app:cornerRadius="5dp"
        app:shadowEnabled="false" />

</LinearLayout>
