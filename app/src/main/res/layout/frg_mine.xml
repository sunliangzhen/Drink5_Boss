<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="320px"
                android:background="#2c82df"
                android:visibility="visible">

                <cn.zero.android.common.view.shapeimageview.CircularImageView
                    android:id="@+id/iv_bmine_head"
                    android:layout_width="163px"
                    android:layout_height="163px"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="right|bottom"
                    android:layout_marginTop="70px"
                    android:minHeight="198px"
                    android:minWidth="198px"
                    android:src="@drawable/ic_mine_head"
                    app:siBorderAlpha="0.5"
                    app:siBorderColor="#ffffff"
                    app:siBorderWidth="10px" />

                <TextView
                    android:id="@+id/bmine_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_bmine_head"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20px"
                    android:text="含淡水泉"
                    android:textColor="#fff"
                    android:textSize="28px" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/bmine_linlay_shui"
                android:layout_width="600px"
                android:layout_height="80px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20px"
                android:background="@drawable/shape_fb"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_mine_m"
                    android:drawablePadding="20px"
                    android:text="个人送水页面"
                    android:textColor="#fff"
                    android:textSize="28px" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/bmine_relay_pro"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginTop="30px"
                android:background="#fff"
                android:paddingLeft="30px"
                android:paddingRight="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_mine_01"
                    android:drawablePadding="30px"
                    android:text="我的水品"
                    android:textColor="#292929"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_mine_back" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bmine_relay_record"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginTop="20px"
                android:background="#fff"
                android:paddingLeft="30px"
                android:paddingRight="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_mine_02"
                    android:drawablePadding="30px"
                    android:text="水站记录"
                    android:textColor="#292929"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_mine_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#ebebeb" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bmine_relay_total"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="#fff"
                android:paddingLeft="30px"
                android:paddingRight="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_mine_people"
                    android:drawablePadding="30px"
                    android:text="水站统计"
                    android:textColor="#292929"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_mine_back" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bmine_relay_money"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginTop="20px"
                android:background="#fff"
                android:paddingLeft="30px"
                android:paddingRight="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_mine_friend"
                    android:drawablePadding="30px"
                    android:text="对账结算"
                    android:textColor="#292929"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_mine_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#ebebeb" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bmine_relay_card"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="#fff"
                android:paddingLeft="30px"
                android:paddingRight="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_mine_yhm"
                    android:drawablePadding="30px"
                    android:text="我的银行卡"
                    android:textColor="#292929"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_mine_back" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bmine_relay_client"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginTop="20px"
                android:background="#fff"
                android:paddingLeft="30px"
                android:paddingRight="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_mine_people"
                    android:drawablePadding="30px"
                    android:text="水站客户"
                    android:textColor="#292929"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_mine_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#ebebeb" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bmine_relay_mystu"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="#fff"
                android:paddingLeft="30px"
                android:paddingRight="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_mine_friend"
                    android:drawablePadding="30px"
                    android:text="水站水工"
                    android:textColor="#292929"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_mine_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#ebebeb" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bmine_relay_yhm"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="#fff"
                android:paddingLeft="30px"
                android:paddingRight="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_mine_yhm"
                    android:drawablePadding="30px"
                    android:text="水站优惠码"
                    android:textColor="#292929"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_mine_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#ebebeb" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bmine_relay_yq"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="#fff"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_mine_yq"
                    android:drawablePadding="30px"
                    android:text="我的邀请"
                    android:textColor="#292929"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_mine_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#ebebeb" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bmine_relay_ewm"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="#fff"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_mine_yhm"
                    android:drawablePadding="30px"
                    android:text="邀请好友下载喝我app"
                    android:textColor="#292929"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_mine_back" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bmine_relay_news"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginTop="20px"
                android:background="#fff"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_mine_news"
                    android:drawablePadding="30px"
                    android:text="水站信息"
                    android:textColor="#292929"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_mine_back" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bmine_relay_set"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginTop="20px"
                android:background="#fff"
                android:paddingLeft="30px"
                android:paddingRight="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_mine_set"
                    android:drawablePadding="30px"
                    android:text="设置"
                    android:textColor="#292929"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_mine_back" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:background="#f5f5f5" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
