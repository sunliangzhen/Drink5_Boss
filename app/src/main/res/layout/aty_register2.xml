<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <EditText
        android:id="@+id/register2_etxt_pass"
        android:layout_width="630px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="124px"
        android:background="#fff"
        android:drawableLeft="@drawable/login_pass"
        android:drawablePadding="30px"
        android:gravity="center_vertical"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLength="11"
        android:textColorHint="#989898"
        android:textSize="28px" />

    <View
        android:layout_width="630px"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:background="#dbdbdb" />

    <EditText
        android:id="@+id/register2_etxt_pass2"
        android:layout_width="630px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="51px"
        android:background="#fff"
        android:drawableLeft="@drawable/login_pass"
        android:drawablePadding="30px"
        android:gravity="center_vertical"
        android:hint="请确认密码"
        android:inputType="textPassword"
        android:maxLength="11"
        android:textColorHint="#989898"
        android:textSize="28px" />

    <View
        android:layout_width="630px"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:background="#dbdbdb" />

    <EditText
        android:id="@+id/register2_etxt_yhm"
        android:layout_width="630px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="51px"
        android:background="#fff"
        android:drawableLeft="@drawable/register_yhm"
        android:drawablePadding="30px"
        android:gravity="center_vertical"
        android:hint="请输入优惠码（选填）"
        android:inputType="phone"
        android:maxLength="11"
        android:textColorHint="#989898"
        android:textSize="28px" />

    <View
        android:id="@+id/view_line"
        android:layout_width="630px"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:background="#dbdbdb" />


    <cn.zero.android.common.view.FButton
        android:id="@+id/fb_register2_ok"
        android:layout_width="690px"
        android:layout_height="88px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70px"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="32px"
        app:buttonColor="#ffc000"
        app:cornerRadius="5dp"
        app:shadowEnabled="false" />
</LinearLayout>
