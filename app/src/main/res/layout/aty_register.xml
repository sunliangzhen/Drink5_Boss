<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="630px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="124px"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/register_etxt_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:drawableLeft="@drawable/login_num"
            android:drawablePadding="30px"
            android:gravity="center_vertical"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:textColorHint="#989898"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/num_imgv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="19px"
            android:visibility="gone"
            android:src="@drawable/yzm_cha" />
    </LinearLayout>


    <View
        android:layout_width="630px"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:background="#dbdbdb" />

    <RelativeLayout
        android:layout_width="630px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px">

        <EditText
            android:id="@+id/register_etxt_code"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:background="#fff"
            android:drawableLeft="@drawable/register_yzm"
            android:drawablePadding="30px"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:textColorHint="#989898"
            android:textSize="28px" />

        <TextView
            android:id="@+id/register_tv_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="发送验证码"
            android:textColor="#2c82df"
            android:textSize="28px" />

        <View
            android:layout_width="1px"
            android:layout_height="30px"
            android:layout_marginRight="30px"
            android:layout_toLeftOf="@+id/register_tv_yzm"
            android:background="#dbdbdb" />
    </RelativeLayout>


    <View
        android:layout_width="630px"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:background="#dbdbdb" />

    <cn.zero.android.common.view.FButton
        android:id="@+id/fb_register_ok"
        android:layout_width="690px"
        android:layout_height="88px"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70px"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="32px"
        app:buttonColor="#ffc000"
        app:cornerRadius="5dp"
        app:shadowEnabled="false" />
</LinearLayout>
