<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_list_rg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70px"
            android:paddingLeft="30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现账号:"
                android:textColor="#999999"
                android:textSize="32px" />

            <EditText
                android:inputType="number"
                android:id="@+id/dlg_applay_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:layout_weight="1"
                android:background="#fff"
                android:hint="输入提现账号"
                android:lineSpacingExtra="8px"
                android:textColorHint="#999999"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="#282828"
                android:textSize="32px" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="45px"
            android:background="#ebebeb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45px"
            android:paddingLeft="30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认账户:"
                android:textColor="#999999"
                android:textSize="32px" />

            <EditText
                android:id="@+id/dlg_applay_tv_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:layout_weight="1"
                android:background="#fff"
                android:inputType="number"
                android:lineSpacingExtra="8px"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="#282828"
                android:textSize="32px" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="60px"
            android:background="#ebebeb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dlg_applay_tv_no"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#2c82df"
                android:textSize="32px" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#dbdbdb" />

            <TextView
                android:id="@+id/dlg_applay_tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="#2c82df"
                android:textSize="32px" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
