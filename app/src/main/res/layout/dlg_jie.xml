<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_list_rg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dlg_tv_content"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="50px"
            android:lineSpacingExtra="8px"
            android:text="解绑后将无法使用该银行卡的快捷支付，请再次确定解除该银行卡？"
            android:textColor="#282828"
            android:textSize="28px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="60px"
            android:background="#ebebeb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/builderpay_tv_no"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消绑定"
                android:textColor="#2c82df"
                android:textSize="28px" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#dbdbdb" />

            <TextView
                android:id="@+id/builderpay_tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定绑定"
                android:textColor="#2c82df"
                android:textSize="28px" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
