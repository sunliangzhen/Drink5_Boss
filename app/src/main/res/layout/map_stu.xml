<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="380px"
        android:layout_height="325px"
        android:background="@drawable/ic_white_bg_flag"
        android:orientation="vertical"
        android:paddingLeft="20px"
        android:paddingRight="30px"
        android:paddingTop="20px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="89px">

            <ImageView
                android:id="@+id/mapstu_imgv_head"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_client_test" />

            <TextView
                android:id="@+id/mapstu_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@+id/mapstu_imgv_head"
                android:text="李师傅"
                android:textColor="#282828"
                android:textSize="28px" />

            <ImageView
                android:id="@+id/mapstu_imgv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:src="@drawable/ic_page_lv_phone2" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ebebeb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/shape_red"
                android:drawablePadding="10px"
                android:text="今日送水桶(桶)"
                android:textColor="#999999"
                android:textSize="22px" />

            <TextView
                android:id="@+id/mapstu_tv_tong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="30"
                android:textColor="#282828"
                android:textSize="22px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ebebeb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/shape_green"
                android:drawablePadding="10px"
                android:text="今日送水票(张)"
                android:textColor="#999999"
                android:textSize="22px" />

            <TextView
                android:id="@+id/mapstu_tv_piao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="30"
                android:textColor="#282828"
                android:textSize="22px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ebebeb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/shape_yell"
                android:drawablePadding="10px"
                android:text="今日发展客户(人)"
                android:textColor="#999999"
                android:textSize="22px" />

            <TextView
                android:id="@+id/mapstu_tv_hu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="30"
                android:textColor="#282828"
                android:textSize="22px" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
