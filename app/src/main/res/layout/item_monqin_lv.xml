<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/item_monqi_linlay_bottom"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:background="#fef5db">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上期未结(元)"
                android:textColor="#999999"
                android:textSize="20px" />

            <TextView
                android:id="@+id/item_monqinlv_tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="50"
                android:textColor="#4d4d4d"
                android:textSize="20px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本期应结(元)"
                android:textColor="#999999"
                android:textSize="20px" />

            <TextView
                android:id="@+id/item_monqinlv_tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="50"
                android:textColor="#4d4d4d"
                android:textSize="20px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本期实结(元)"
                android:textColor="#999999"
                android:textSize="20px" />

            <TextView
                android:id="@+id/item_monqinlv_tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="50"
                android:textColor="#4d4d4d"
                android:textSize="20px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本期未结(元)"
                android:textColor="#999999"
                android:textSize="20px" />

            <TextView
                android:id="@+id/item_monqinlv_tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="50"
                android:textColor="#4d4d4d"
                android:textSize="20px" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/item_monqi_v"
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#eeeeee" />

    <LinearLayout
        android:id="@+id/item_monqi_linlay_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px">

                <ImageView
                    android:id="@+id/item_monqin_imgv_xin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_page_lv_xin" />

                <TextView
                    android:id="@+id/item_monqin_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3px"
                    android:layout_toRightOf="@id/item_monqin_imgv_xin"
                    android:drawableLeft="@drawable/ic_page_lv_time"
                    android:drawablePadding="10px"
                    android:text="2015-10-24  16:00"
                    android:textColor="#999999"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/item_monqin_tv_tuijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3px"
                    android:text="平台推荐"
                    android:textColor="#2c82df"
                    android:textSize="24px" />


            </RelativeLayout>

            <View
                android:layout_width="690px"
                android:layout_height="1px"
                android:layout_gravity="center_horizontal"
                android:background="#ebebeb" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="25px">


                <ImageView
                    android:id="@+id/item_monqinlv_imgv_pro"
                    android:layout_width="148px"
                    android:layout_height="148px"
                    android:layout_marginRight="20px"
                    android:background="#dbdbdb"
                    android:padding="1px"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_page_lv_pro" />

                <RelativeLayout
                    android:id="@+id/item_monqinlv_linlay_proname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11px"
                    android:layout_toRightOf="@id/item_monqinlv_imgv_pro">

                    <TextView
                        android:id="@+id/item_monqinlv_tv_proname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="月眼山泉"
                        android:textColor="#282828"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/item_monqinlv_tv_attr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/item_monqinlv_tv_proname"
                        android:text="(16L)"
                        android:textColor="#999999"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/item_monqinlv_tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:layout_toRightOf="@+id/item_monqinlv_tv_attr"
                        android:text="X2"
                        android:textColor="#999999"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/item_monqinlv_tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="￥2.00"
                        android:textColor="#282828"
                        android:textSize="28px" />


                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/item_monqinlv_linlay_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_monqinlv_linlay_proname"
                    android:layout_marginTop="20px"
                    android:layout_toRightOf="@id/item_monqinlv_imgv_pro">

                    <TextView
                        android:id="@+id/item_monqinlv_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="凌先生"
                        android:textColor="#282828"
                        android:textSize="26px" />

                    <TextView
                        android:id="@+id/item_monqinlv_tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25px"
                        android:drawableLeft="@drawable/ic_page_lv_phone"
                        android:drawablePadding="10px"
                        android:text="15555555555"
                        android:textColor="#ffc000"
                        android:textSize="26px" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_monqinlv_linlay_name"
                    android:layout_marginTop="20px"
                    android:layout_toRightOf="@id/item_monqinlv_imgv_pro">

                    <TextView
                        android:id="@+id/item_monqinlv_tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxEms="15"
                        android:singleLine="true"
                        android:text="天津市河北区君天大厦发的说法是丰富的订单"
                        android:textColor="#999999"
                        android:textSize="26px" />

                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="25px"
                android:background="#ebebeb" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px">


                <TextView
                    android:id="@+id/item_monqinlv_tv_tuimoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="10"
                    android:textColor="#fe4c52"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/item_monqinlv_tv_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="20px"
                    android:layout_toLeftOf="@id/item_monqinlv_tv_tuimoney"
                    android:text="推荐费用:"
                    android:textColor="#292929"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/item_monqinlv_tv_dimoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/item_monqinlv_tv_01"
                    android:text="10"
                    android:textColor="#fe4c52"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:layout_toLeftOf="@id/item_monqinlv_tv_dimoney"
                    android:text="京币抵扣:"
                    android:textColor="#292929"
                    android:textSize="24px" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
