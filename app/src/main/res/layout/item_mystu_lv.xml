<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#fafafa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:paddingLeft="20px"
            android:paddingRight="30px">

            <ImageView
                android:id="@+id/item_mystulv_imgv_head"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_centerVertical="true"
                android:layout_marginRight="19px"
                android:scaleType="fitXY"
                android:src="@drawable/ic_client_test" />

            <TextView
                android:id="@+id/item_mystulv_tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/item_mystulv_imgv_head"
                android:text="小王"
                android:textColor="#282828"
                android:textSize="28px" />

            <ImageView
                android:id="@+id/item_mystu_imgv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_page_lv_phone2" />

            <View
                android:layout_width="1px"
                android:layout_height="25px"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:layout_toLeftOf="@id/item_mystu_imgv_phone"
                android:background="#ebebeb" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#ebebeb" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left">

                <TextView
                    android:id="@+id/item_mystulv_tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/shape_red"
                    android:drawablePadding="10px"
                    android:text="今日送水"
                    android:textColor="#999999"
                    android:textSize="22px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/item_mystulv_tv_num"
                    android:layout_toRightOf="@id/item_mystulv_tv_num"
                    android:text="(桶)"
                    android:textColor="#999999"
                    android:textSize="18px" />

                <TextView
                    android:id="@+id/item_mystulv_tv_tong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_mystulv_tv_num"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20px"
                    android:text="30"
                    android:textColor="#282828"
                    android:textSize="24px" />
            </RelativeLayout>

            <View
                android:layout_width="1px"
                android:layout_height="40px"
                android:layout_gravity="center_vertical"
                android:background="#ebebeb" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/item_mystulv_tv_numz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/shape_green"
                    android:drawablePadding="10px"
                    android:text="今日送水票"
                    android:textColor="#999999"
                    android:textSize="22px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/item_mystulv_tv_numz"
                    android:layout_toRightOf="@id/item_mystulv_tv_numz"
                    android:text="(张)"
                    android:textColor="#999999"
                    android:textSize="18px" />

                <TextView
                    android:id="@+id/item_mystulv_tv_piao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_mystulv_tv_numz"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20px"
                    android:text="30"
                    android:textColor="#282828"
                    android:textSize="24px" />
            </RelativeLayout>

            <View
                android:layout_width="1px"
                android:layout_height="40px"
                android:layout_gravity="center_vertical"
                android:background="#ebebeb" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    android:id="@+id/item_mystulv_tv_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/shape_yell"
                    android:drawablePadding="10px"
                    android:text="今日发展客户"
                    android:textColor="#999999"
                    android:textSize="22px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/item_mystulv_tv_list"
                    android:layout_toRightOf="@id/item_mystulv_tv_list"
                    android:text="(人)"
                    android:textColor="#999999"
                    android:textSize="18px" />

                <TextView
                    android:id="@+id/item_mystulv_tv_stu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_mystulv_tv_list"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20px"
                    android:text="6000"
                    android:textColor="#282828"
                    android:textSize="24px" />
            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:background="#ebebeb" />

        <CheckBox
            android:id="@+id/item_mystulv_cbbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20px"
            android:button="@null"
            android:checked="false"
            android:drawablePadding="10px"
            android:drawableRight="@drawable/selector_bang_cbox"
            android:paddingBottom="20px"
            android:paddingTop="20px"
            android:text="绑定的用户"
            android:textColor="#999999"
            android:textSize="22px" />

        <cn.zero.android.common.view.linearlistview.LinearListView
            android:id="@+id/item_mystulv_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5"
            android:orientation="vertical"
            android:showDividers="middle|beginning|end|none"
            android:visibility="gone"></cn.zero.android.common.view.linearlistview.LinearListView>

    </LinearLayout>

</LinearLayout>
