<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <EditText
        android:id="@+id/login_etxt_account"
        android:layout_width="630px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="124px"
        android:background="#fff"
        android:drawableLeft="@drawable/login_num"
        android:drawablePadding="30px"
        android:gravity="center_vertical"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:textColorHint="#989898"
        android:textSize="28px" />

    <View
        android:layout_width="630px"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:background="#dbdbdb" />

    <EditText
        android:id="@+id/login_etxt_pass"
        android:layout_width="630px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:background="#fff"
        android:drawableLeft="@drawable/login_pass"
        android:drawablePadding="30px"
        android:gravity="center_vertical"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLength="11"
        android:textColorHint="#989898"
        android:textSize="28px" />

    <View
        android:layout_width="630px"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:background="#dbdbdb" />

    <TextView
        android:id="@+id/login_tv_findpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="70px"
        android:layout_marginTop="25px"
        android:gravity="right"
        android:text="忘记密码？"
        android:textColor="#5394E3"
        android:textSize="26px" />

    <cn.zero.android.common.view.FButton
        android:id="@+id/fb_login_ok"
        android:layout_width="690px"
        android:layout_height="88px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70px"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="32px"
        app:buttonColor="#ffc000"
        app:cornerRadius="5dp"
        app:shadowEnabled="false" />
</LinearLayout>
