<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="200px"
    android:paddingLeft="30px"
    android:paddingRight="30px">

    <ImageView
        android:id="@+id/item_bprolv_imgv_pro"
        android:layout_width="148px"
        android:layout_height="148px"
        android:layout_marginRight="20px"
        android:layout_marginTop="25px"
        android:scaleType="fitXY"
        android:background="#dbdbdb"
        android:padding="1px"
        android:src="@drawable/ic_page_lv_pro" />

    <TextView
        android:id="@+id/item_bprolv_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35px"
        android:layout_toRightOf="@id/item_bprolv_imgv_pro"
        android:text="月眼山泉"
        android:textColor="#282828"
        android:textSize="28px" />

    <TextView
        android:id="@+id/item_bprolv_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_bprolv_tv_name"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@+id/item_bprolv_imgv_pro"
        android:text="规格: 19L"
        android:textColor="#999999"
        android:textSize="24px" />

    <TextView
        android:id="@+id/item_bprolv_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_bprolv_tv_type"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@+id/item_bprolv_imgv_pro"
        android:text="￥20.00"
        android:textColor="#fe4c52"
        android:textSize="30px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="28px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_bprolv_imgv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bpro_b" />

        <View
            android:layout_width="1px"
            android:layout_height="36px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:background="#000" />

        <ImageView
            android:id="@+id/item_bprolv_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bpro_delete" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_bprolv_imgv_pro"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月销"
            android:textColor="#999999"
            android:textSize="24px" />

        <TextView
            android:id="@+id/item_bprolv_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="260"
            android:textColor="#282828"
            android:textSize="24px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#ebebeb" />
</RelativeLayout>
