<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_list_rg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60px"
            android:text="请输入支付密码"
            android:textColor="#282828"
            android:textSize="32px" />

        <com.toocms.drink5.boss.ui.view.PasswordInputView
            android:id="@+id/modify_pwd_pwdview"
            android:layout_width="600px"
            android:layout_height="130px"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="60px"
            android:background="#fff"
            android:inputType="number"
            android:maxLength="6"
            app:pwd_border_color="#a000"
            app:theme="@style/Animation.AppCompat.Dialog" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="60px"
            android:background="#ebebeb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/builderpay_tv_no"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#2c82df"
                android:textSize="32px" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#dbdbdb" />

            <TextView
                android:id="@+id/builderpay_tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="#2c82df"
                android:textSize="32px" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
