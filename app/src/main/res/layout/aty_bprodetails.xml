<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="98px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bprode_imgv_cover"
                android:layout_width="match_parent"
                android:layout_height="600px"
                android:scaleType="fitXY"
                android:src="@drawable/ic_default_pro"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dbdbdb" />

            <TextView
                android:id="@+id/bprode_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="15px"
                android:text="农夫山泉"
                android:textColor="#292929"
                android:textSize="34px" />

            <TextView
                android:id="@+id/bprode_tv_attr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="29px"
                android:text="规格：19L"
                android:textColor="#999999"
                android:textSize="24px" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:paddingLeft="30px"
                android:paddingRight="30px">

                <TextView
                    android:id="@+id/bprode_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="300"
                    android:textColor="#fe4c52"
                    android:textSize="34px" />

                <TextView
                    android:id="@+id/bprod_tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="300"
                    android:textColor="#292929"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/bprod_tv_num"
                    android:text="月销"
                    android:textColor="#999999"
                    android:textSize="24px" />

                <View
                    android:id="@+id/bprode_v_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#dbdbdb" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/bprode_linlay_prompt"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="30px">

                <TextView
                    android:layout_width="80px"
                    android:layout_height="30px"
                    android:background="@drawable/shape_red2"
                    android:gravity="center"
                    android:text="促销"
                    android:textColor="#fff"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/bprode_tv_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:text="农夫山泉买10送1，买50送饮水机一台"
                    android:textColor="#292929"
                    android:textSize="26px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="#f5f5f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30px"
                android:paddingBottom="15px"
                android:paddingRight="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="20px"
                    android:text="水票"
                    android:textColor="#999999"
                    android:textSize="26px" />

                <cn.zero.android.common.view.linearlistview.LinearListView
                    android:id="@+id/bprod_lv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="25px"
                    android:showDividers="middle|beginning|end|none"></cn.zero.android.common.view.linearlistview.LinearListView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="#f5f5f5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="30px"
                android:paddingRight="30px">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="1"
                    android:background="#999999" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:text="图文详情"
                    android:textColor="#999999"
                    android:textSize="26px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="1"
                    android:background="#999999" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="20px"
                android:text="产品特色"
                android:textColor="#333333"
                android:textSize="24px" />

            <TextView
                android:layout_marginBottom="20px"
                android:id="@+id/bprode_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="20px"
                android:lineSpacingExtra="20px"
                android:paddingRight="30px"
                android:text="产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色产品特色"
                android:textColor="#333333"
                android:textSize="24px" />

            <LinearLayout
                android:id="@+id/bprode_linlay_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bprode_tv_del"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="删除"
            android:textColor="#292929"
            android:textSize="32px" />

        <TextView
            android:id="@+id/bprode_tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffc000"
            android:gravity="center"
            android:text="编辑"
            android:textColor="#fff"
            android:textSize="32px" />
    </LinearLayout>

</RelativeLayout>
